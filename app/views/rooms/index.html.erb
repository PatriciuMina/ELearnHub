<div id="wrapper">
  <% if current_user.role == "admin" or current_user.role == "teacher" %>
    <%= render 'layouts/leftBar' %>
  <% else %>
    <%= render 'layouts/leftBarStud' %>
  <% end %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>

      <div class="row">
        <div class="col-md-2">
          <h5> Hi <%= @current_user.name %> </h5>
          <div>
            <h4> Chats </h4>
            <div style="height: 480px; overflow-y: scroll;">
              <% @users.each_slice(4) do |user| %>
                <% unless user[0].nil? %>
                  <div class="card-header">
                    <img id="img-card" src="../startbootstrap-sb-admin-2-gh-pages/img/undraw_profile.svg" width="30" height="30"/>
                    <%= link_to user[0].name, "/users_admin/" + user[0].id.to_s %>
                  </div>
                <% end %>

                <% unless user[1].nil? %>
                  <div class="card-header">
                    <img id="img-card" src="../startbootstrap-sb-admin-2-gh-pages/img/undraw_profile_1.svg" width="30" height="30"/>
                    <%= link_to user[1].name, "/users_admin/" + user[1].id.to_s %>
                  </div>
                <% end %>

                <% unless user[2].nil? %>
                  <div class="card-header">
                    <img id="img-card" src="../startbootstrap-sb-admin-2-gh-pages/img/undraw_profile_2.svg" width="30" height="30"/>
                    <%= link_to user[2].name, "/users_admin/" + user[2].id.to_s %>
                  </div>
                <% end %>

                <% unless user[3].nil? %>
                  <div class="card-header">
                    <img id="img-card" src="../startbootstrap-sb-admin-2-gh-pages/img/undraw_profile_3.svg" width="30" height="30"/>
                    <%= link_to user[3].name, "/users_admin/" + user[3].id.to_s %>
                  </div>
                <% end %>

              <% end %>
            </div>
          </div>
          <h4> Groups </h4>
          <%= render partial: "layouts/new_room_form" %>
          <div>
            <%= turbo_stream_from "rooms" %>
            <% unless @rooms.nil? %>
              <div id="rooms">
                <div style="height: 120px; overflow-y: scroll;">
                  <% @rooms.each do |room| %>
                    <div class="card-header">
                      <img src="../startbootstrap-sb-admin-2-gh-pages/img/undraw_rocket.svg" width="30" height="30">
                      <%= link_to room.name, "/rooms/" + room.id.to_s %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-10 bg-dark text-light">

          <h4 class="text-center"> <%= @user&.name || @single_room.name %> </h4>

          <%= turbo_stream_from @single_room %>
          <div id="messages">
            <%= render @messages %>
          </div>
          <%= render partial: 'layouts/new_message_form' %>
        </div>
      </div>

    </div>
  </div>
</div>







