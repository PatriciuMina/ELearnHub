<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>
      <div class="container-fluid" style="padding-bottom: 20px">
        <% if current_user.role != 'student' %>
          <div>
            <%= form_tag @enrollment, method: :post, local: true do |form| %>
              <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Enroll</th>
                </tr>
                </thead>
                <tbody>
                <% @users.each do |u| %>
                  <% if u.domain == current_user.domain %>
                    <tr>
                      <th><%= u.id %></th>
                      <td><%= u.name %></td>
                      <td><%= u.email %></td>
                      <td><%= check_box_tag "users_ids[]", u.id %></th>
                    </tr>
                  <% end %>
                <% end %>
                </tbody>
              </table>
              <%= submit_tag "Enroll", class: "btn btn-primary" %>
            <% end %>
          </div>
          <br/>
        <% end %>
        <%= link_to "Back", :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
