<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>

      <body class="bg-gradient-primary">
      <div class="containter justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-8">
            <%= form_for @course,  method: :post, local: true do |f| %>
                    <div class="row justify-content-center ">
                      <div class="col-lg-7 ">
                        <div class="p-5">
                          <div class="text-center ">
                            <h1 class="h4 text-gray-900 mb-4">Create a new Course!</h1>
                          </div>
                          <div class="form-group">
                            <%= f.label :name %><br />
                            <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name" %>
                          </div>

                          <div class="form-group">
                            <%= f.label :description %><br />
                            <%= f.text_field :description, autofocus: true, class:"form-control", autocomplete: "description" %>
                          </div>

                          <div class="form-group">
                            <%= f.label :access_key %><br />
                            <%= f.text_field :access_key, autofocus: true, class:"form-control", autocomplete: "access_key" %>
                          </div>
                          <div class="form-group">
                            <%= f.label :price %><br />
                            <%= f.text_field :price, autofocus: true, class:"form-control", autocomplete: "price" %>
                          </div>

                          <div class="form-group">
                            <%= f.label :grading_scale_id %><br />
                            <%= f.select :grading_scale_id, options_from_collection_for_select(@grading_scales, :id, :name) %>
                          </div>

                          <%= link_to "Create Grading Scale", new_grading_scale_path, class: 'btn btn-primary' %>


                          <div style="display: none;">
                            <%= f.text_field :school_id, value: current_user.school_id %>
                          </div>

                          <div style="display: none;">
                            <%= f.text_field :teacher_id, value: current_user.id %>
                          </div>

                          <div class="actions">
                            <%= f.submit "Create Course" %>
                          </div>
                        </div>
                      </div>
                    </div>
            <% end %>
          </div>
        </div>
      </div>
      </body>
    </div>
  </div>
</div>

