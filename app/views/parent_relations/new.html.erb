<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>

      <body class="bg-gradient-primary">
      <div class="containter justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-8">
            <%= form_for @parent_relation,  method: :post, local: true do |f| %>
              <div class="row justify-content-center ">
                <div class="col-lg-7 ">
                  <div class="p-5">
                    <div class="text-center ">
                      <h1 class="h4 text-gray-900 mb-4">Create a new Parent association!</h1>
                    </div>

                    <div class="form-group">
                      <%= f.label :parent_id %><br />
                      <%= f.select :parent_id, options_from_collection_for_select(@parents, :id, :name) %>
                    </div>

                    <div class="form-group">
                      <%= f.label :child_id %><br />
                      <%= f.select :child_id, options_from_collection_for_select(@children, :id, :name) %>
                    </div>


                    <div class="actions">
                      <%= f.submit "Create Relation" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </body>
    </div>
  </div>
</div>

