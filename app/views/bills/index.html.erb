<% if current_user.role == "admin" or current_user.role == "teacher" %>
  <div id="wrapper">
    <% if current_user.role == "admin" or current_user.role == "teacher" %>
      <%= render 'layouts/leftBar' %>
    <% else %>
      <%= render 'layouts/leftBarStud' %>
    <% end %>

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">

        <%= render 'layouts/topBar' %>
        <div class="container-fluid" style="padding-bottom: 20px">
          <h1 class="h3 mb-0 text-gray-800 text-center">Bills </h1>

          <p></p>

          <div>
            <table class="table table-striped table-bordered table-hover">
              <thead class="thead-dark">
              <tr>

                <th>Name</th>
                <th>Email</th>
                <th>Product_id</th>
                <th>Amount</th>
                <th>Date</th>
              </tr>
              </thead>
              <tbody>
              <% @bills.each do |b| %>

                <td><%= b.name %></td>
                <td><%= b.email %></td>
                <td><%= b.product_id %></td>
                <td><%= number_to_currency(b.amount / 100) %></td>
                <td><%= b.created_at %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="text my-4">
            <%= will_paginate @bills, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>