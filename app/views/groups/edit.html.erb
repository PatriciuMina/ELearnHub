<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>

      <body class="bg-gradient-primary">
      <div class="containter justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-8">
            <%= form_for @group,  method: :patch, local: true do |f| %>
              <div class="row justify-content-center ">
                <div class="col-lg-7 ">
                  <div class="p-5">
                    <div class="text-center ">
                      <h1 class="h4 text-gray-900 mb-4">Update Course!</h1>
                    </div>
                    <div class="form-group">
                      <%= f.label :name %><br />
                      <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :description %><br />
                      <%= f.text_field :description, autofocus: true, class:"form-control", autocomplete: "description" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :price %><br />
                      <%= f.text_field :price, autofocus: true, class:"form-control", autocomplete: "price" %>
                    </div>


                    <div style="display: none;">
                      <%= f.text_field :school_id, value: current_user.school_id %>
                    </div>

                    <div style="display: none;">
                      <%= f.text_field :admin_id, value: current_user.id %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Update Group", class:'btn btn-secondary' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </body>
    </div>
  </div>
</div>



