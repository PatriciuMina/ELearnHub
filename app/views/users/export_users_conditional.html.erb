<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%= render 'layouts/topBar' %>

      <%if current_user.role !='admin' %>
        <h1>You are not allowed here, go back</h1>
        <a class="btn btn-primary" <%= link_to "Back", root_path%></a>
      <%else %>

        <body class="bg-gradient-primary">
        <div class="containter justify-content-center">
          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-8">

              <%= form_tag export_users_conditional_users_admin_index_path(format: :csv), method: :post do %>
                <div class="text ">
                  <h1 class="h4 text-gray-900 mb-4">Export the desired columns from users!</h1>
                </div>
                <% @filtered_columns.each do |column_name| %>
                  <%= check_box_tag "selected_columns[]", column_name %>
                  <%= label_tag column_name, column_name.titleize %><br>
                <% end %>
                <%= submit_tag "Export" %>
              <% end %>
      <%end %>
      </div>
      </div>
      </div>
      </body>
    </div>
  </div>
</div>
