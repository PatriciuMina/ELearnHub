<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>
      <div class="container-fluid" style="padding-bottom: 20px">
        <a class="btn btn-primary" <%= link_to 'Course home', '/courses/'+@course.id.to_s %>
        <a class="btn btn-primary" <%= link_to 'Assignments', "/course/"+@course.id.to_s+"/assignments?page=1" %>

        <%if false %>
          <a class="btn btn-primary" <%= link_to 'Enroll', "/courses/"+@course.id.to_s+"/new" %></a>
        <%end %>
        <% if current_user.role == "admin" or current_user.role== "teacher" %>
          <a class="btn btn-primary" <%= link_to "Create lesson", new_course_lesson_path(@course.id) %>
          <a class="btn btn-primary" <%= link_to 'See enrolled students', "/course/" + @course.id.to_s + "/enrolled?page=1" %>
          <a class="btn btn-primary" <%= link_to 'Add Resource', "/course/"+@course.id.to_s+"/add_resource" %>
        <%end %>

        <a class="btn btn-primary" <%= link_to 'All Course Files', "/course/"+@course.id.to_s+"/resources" %>
        <a class="btn btn-primary" <%= link_to 'Calendar', "/course/"+@course.id.to_s+"/calendar" %>



      </div>

      <%= form_for @resource, method: :post, local: true do |form| %>
        <div class="row justify-content-center ">
          <div class="col-lg-7 ">
            <div class="p-5">
              <div class="text-center ">
                <h1 class="h4 text-gray-900 mb-4">Add a new resource!</h1>
              </div>
              <div class="field form-group">
                <%= form.file_field :file, autofocus: true, autocomplete: "file", class:"form-control", placeholder:"Chose a File"%>
              </div><br/>


              <div style="display: none;">
                <%= form.text_field :user_id, value: current_user.id %>
              </div>
              <div style="display: none;">
                <%= form.text_field :school_id, value: @course.school_id %>
              </div>

              <div style="display: none;">
                <%= form.text_field :resourceable_id, value: @course.id %>
              </div>

              <div style="display: none;">
                <%= form.text_field :resourceable_type, value: 'course' %>
              </div>

              <div class="actions">
                <%= form.submit 'Save Course File', class:'btn btn-primary', data: {turbo: false} %>
              </div><br/>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>