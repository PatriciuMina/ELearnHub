<div id="wrapper">
  <%= render 'layouts/leftBar' %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">

      <%= render 'layouts/topBar' %>

      <body class="bg-gradient-primary">
      <div class="containter justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-8">
            <%= form_for @grading_scale,  method: :post, local: true do |f| %>
              <div class="row justify-content-center ">
                <div class="col-lg-7 ">
                  <div class="p-5">
                    <div class="text-center ">
                      <h1 class="h4 text-gray-900 mb-4">Create a new Grading Scale!</h1>
                    </div>
                    <div class="form-group">
                      <%= f.label :name %><br />
                      <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :custom %><br />
                      <%= f.text_field :custom, autofocus: true, class:"form-control", autocomplete: "custom" %>
                    </div>


                    <div class="actions">
                      <%= f.submit "Create Grading Scale" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </body>
    </div>
  </div>
</div>

